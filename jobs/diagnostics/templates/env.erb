
configureDebugLevel() {
  [[ $DEBUG = true ]] && set -x || set +x
}

configureDebugLevel

export DIAGNOSTICS_RUN_AT_START_UP="<%= p("diagnostics.run_at_start_up") %>"
export DIAGNOSTICS_JOB=/var/vcap/jobs/diagnostics

export DIAGNOSTICS_LOG_BASE="<%= p("diagnostics.log_directory") %>"
export DIAGNOSTICS_TEST_DIR=$DIAGNOSTICS_JOB/packages/diagnostics

export DIAGNOSTICS_SERVICE_USER=vcap
export DIAGNOSTICS_SERVICE_GROUP=vcap

export RABBITMQ_ENV="<%= link("rabbitmq-server").p("rabbitmq-server.env") %>"

export LANGUAGE=en_US.UTF-8
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8

JQ_PACKAGE=`pushd $DIAGNOSTICS_JOB/packages/jq-* >/dev/null && echo $PWD && popd >/dev/null`
BASHT_PACKAGE=`pushd $DIAGNOSTICS_JOB/packages/basht-* >/dev/null && echo $PWD && popd >/dev/null`

export PATH="$DIAGNOSTICS_JOB/bin:$JQ_PACKAGE:$BASHT_PACKAGE:$PATH"
