export BOOTSTRAP_NODE="<%= "true" if spec.bootstrap %>"

export NETDATA_KICKSTART_SCRIPT=https://my-netdata.io/kickstart-static64.sh

export NETDATA_DIR=/opt/netdata
export NETDATA_CONF_DIR="$NETDATA_DIR/etc/netdata"
export NETDATA_CONF="$NETDATA_CONF_DIR/netdata.conf"
export NETDATA_RABBITMQ_CONF="$NETDATA_DIR/etc/netdata/python.d/rabbitmq.conf"

# We don't want the rabbitmq plugin to be disabled if Management fails to respond,
# as is the case when RabbitMQ is under load
export NETDATA_RABBITMQ_API_RETRIES=6
export NETDATA_RABBITMQ_API_POLL_INTERVAL=<%= link("rabbitmq-server").p("rabbitmq-server.collect_statistics_interval").to_i / 1000 %>

export NETDATA_RABBITMQ_API_USER="<%= link("rabbitmq-server").p("rabbitmq-server.admin_user") %>"
export NETDATA_RABBITMQ_API_PASS="<%= link("rabbitmq-server").p("rabbitmq-server.admin_pass") %>"

export NETDATA_RABBITMQ_API_AVAILABLE_RETRIES=12
export NETDATA_RABBITMQ_API_AVAILABLE_RETRY_INTERVAL=5

export RABBITMQ_ENV="<%= link("rabbitmq-server").p("rabbitmq-server.env") %>"

export PATH="/var/vcap/jobs/netdata/bin:$PATH"
